---------------------TODOS OS EXERCICIOS FORAM FEITOS EM VISUALG--------------------------
Algoritmo "aula 07-08 exe1"

Var
  n, s, divisor: inteiro
  result: real

Inicio
   divisor <- 1003
   s <- 0
   Escreval("Informe nos até qual número da sequência")
   Leia(n)
   enquanto (s <> n) faca
      divisor <- divisor - 3
      s <- s + 1
      se (s % 2 <> 0) entao
         result <- result - (divisor / s)
         senao
            result <- result + (divisor / s)
      fimse
   fimenquanto
   Escreval (-result)

Fimalgoritmo
-----------------                  ------------------------                ------------
Algoritmo "aula 07-08 exe2"

Var
   cont1:inteiro
   l1, l2, area, perim:real

Inicio
   cont1 <- 0
   Escreval("Digite um valor inválido para parar")
   Escreval("Indique o primeiro lado")
   Leia(l1)
   Escreval("Indique o segundo lado")
   Leia(l2)
   enquanto (l1 > 0) e (l2 > 0) faca
      area <- l1 * l2
      Escreval("A aréa é de: ", area)
      perim <- ((l1 * 2) + (l2 * 2))
      Escreval("O perimetro é de: ", perim)
      cont1 <- cont1 + 1
      Escreval("Indique o primeiro lado")
      Leia(l1)
      Escreval("Indique o segundo lado")
      Leia(l2)
   fimenquanto
      Escreval("A quantidade de retangulos são: ", cont1)

Fimalgoritmo
